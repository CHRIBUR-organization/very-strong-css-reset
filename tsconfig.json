{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noErrorTruncation": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "incremental": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "**/node_modules**",
    "**/out**",
    "**/dist**"
  ],
  "include": [
    "**/*.ts",
  ]
}
